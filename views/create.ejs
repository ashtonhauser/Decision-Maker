<!DOCTYPE html>
<html lang="en">

<head>
  <title>Decision Maker: Create</title>
  <% include partials/_header %>

  <link regitl="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" type="text/css" href="/styles/create.css">
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <h2 class="head">Create Your Own Decision Poll</h2>
  <section class="container">
    <form id='form' method="POST" action="/poll/:id">
      <input type="email" id="email" name="email" placeholder="Your Email"></input>
      <textarea id="poll_title" name="poll_title" placeholder="Title of Poll"></textarea>
      <textarea id="description" name="description" placeholder="Description (Optional)"></textarea>
      <input type="checkbox" name="name_required" value="name_required">Require Names?</input>
      <ol id="decisions">
        <li><textarea class="decision" name="decision" placeholder="Enter Option"></textarea></li>
        <li><textarea class="decision" name="decision" placeholder="Enter Option"></textarea></li>
      </ol>
      <input class="click" type="submit" value="Send Data">
      <button id="add" type="button">Add</button>
    </form>
  </section>
  <section class="errors">
    <div class="error" id="email_error">Please Type In Your Email!</div>
  </section>

</body>

</html>
